{% extends "layout.njk" %}
{% block head %}
    <title>Foodfy - {{recipe.title}}</title>
{% endblock head %}
{% block content %}
    <div class="recipe-page">
        <div class="header">
            <div class="main-image">
                <img src="{{recipe.image.path}}" alt="Imagem de {{recipe.title}}">
            </div>
            <div class="images">
                {% for image in recipe.images %}
                    <img src="{{image.path}}" alt="Imagem de {{recipe.title}}" {% if recipe.image.path == image.path %} class="selected" {% endif %} onclick="ImageGallery.selectImage(event)">
                {% endfor %}
            </div>
            <h1>{{recipe.title}}</h1>
            <p>por {{recipe.chef.name}}</p>
        </div>
        <section>
            <div>
                <h2>Ingredientes</h2>
                <span onclick="ShowHide.recipeInfo(event)">esconder</span>
            </div>
            <ul class="info">
                {% for ingredient in recipe.ingredients %}
                    <li>{{ingredient}}</li>
                {% endfor %}
            </ul>
        </section>
        <section>
            <div>
                <h2>Modo de Preparo</h2>
                <span onclick="ShowHide.recipeInfo(event)">mostrar</span>
            </div>
            <ul class="info hidden">
                {% for step in recipe.preparation %}
                    <li>{{step}}</li>
                {% endfor %}
            </ul>
        </section>
        <section>
            <div>
                <h2>Informações Adicionais</h2>
                <span onclick="ShowHide.recipeInfo(event)">mostrar</span>
            </div>
            <p class="info hidden">{{recipe.information}}</p>
        </section>
    </div>
{% endblock content %}